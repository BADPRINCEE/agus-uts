<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtarot"
    android:orientation="vertical"
    tools:context=".RegisActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppinsextra"
        android:gravity="center"
        android:text="Welcome !"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Silahkan Masukan data !"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="35dp">

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:hint="klik disini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/email"
            android:fontFamily="@font/poppinsregular"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:textColorHint="@color/white"
            android:textSize="14dp"
            tools:ignore="TextSizeCheck,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:hint="klik disini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/password"
            android:fontFamily="@font/poppinsregular"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:textColorHint="@color/white"
            android:textSize="14dp"
            tools:ignore="TextSizeCheck,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/editTextTextPassword1"
            android:hint="klik disini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/password"
            android:fontFamily="@font/poppinsregular"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:textColorHint="@color/white"
            android:textSize="14dp"
            tools:ignore="TextSizeCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/poppinssemibold"
            android:gravity="center_horizontal"
            android:text="Daftar"
            android:textAlignment="center"
            android:textSize="50px" />
    </LinearLayout>
</LinearLayout>