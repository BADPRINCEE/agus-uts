<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtarot"
    android:orientation="vertical"
    tools:context=".PwActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppinsextra"
        android:gravity="center"
        android:text="Ganti Password"
        android:textColor="@color/white"
        android:textSize="40sp"
        tools:ignore="HardcodedText,TextSizeCheck,TextSizeCheck" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="masukkan password baru"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="35dp">

        <EditText
            android:id="@+id/editTextText"
            android:hint="buat password baru anda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/password"
            android:fontFamily="@font/poppinsregular"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:textColorHint="@color/white"
            android:textSize="14dp"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry,SpUsage,SpeakableTextPresentCheck,TextFields,TextSizeCheck" />

        <EditText
            android:id="@+id/editTextText2"
            android:hint="konfirmasi password baru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/password"
            android:fontFamily="@font/poppinsregular"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:textColorHint="@color/white"
            android:textSize="14dp"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry,SpUsage,SpeakableTextPresentCheck,TextFields,TextSizeCheck" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/poppinssemibold"
            android:gravity="center_horizontal"
            android:text="Ganti Password"
            android:textAlignment="center"
            android:textSize="50px"
            tools:ignore="HardcodedText,PxUsage,UnusedAttribute" />

        <Button
            android:id="@+id/Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/poppinssemibold"
            android:gravity="center_horizontal"
            android:text="Login"
            android:textAlignment="center"
            android:textSize="50px"
            tools:ignore="HardcodedText,PxUsage,UnusedAttribute" />
    </LinearLayout>

</LinearLayout>