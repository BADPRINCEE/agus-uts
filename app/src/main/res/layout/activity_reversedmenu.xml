<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/black"
    tools:context="ReversedActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/_imageDetail"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:src="@drawable/revace" />

            <TextView
                android:id="@+id/imageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/_imageDetail"
                android:layout_marginTop="-38dp"
                android:gravity="center"
                android:text="ACE OF SWORDS "
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/imageDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Ace of Words adalah kartu yang melambangkan kekuatan dan potensi dari kata-kata. Ketika terbalik secara simbolis, ini mungkin mengindikasikan kesulitan dalam berkomunikasi atau mengungkapkan diri dengan tepat. Maknanya bisa mencakup kesulitan dalam mengekspresikan ide atau gagasan, konflik komunikasi, atau kebingungan dalam komunikasi interpersonal."
                android:textColor="@color/white"
                android:gravity="left"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_below="@id/imageTitle"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
